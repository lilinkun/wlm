<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 标签选中时的背景 -->
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/setting_title_color" />
            <corners android:radius="5dp" />
            <padding android:left="20dip" android:top="10dip" android:right="20dip" android:bottom="10dip" />
            <solid android:color="@color/tv_click_bg" />
        </shape>
    </item>
    <!-- 标签的正常背景 -->
    <item>
        <shape>
            <corners android:radius="5dp" />
            <padding android:left="20dip" android:top="10dip" android:right="20dip" android:bottom="10dip" />
            <solid android:color="@color/line_bg" />
        </shape>
    </item>
</selector>