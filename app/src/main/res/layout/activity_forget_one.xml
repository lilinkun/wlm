<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lzy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_login_bg"
    android:orientation="vertical">

    <com.wlm.wlm.ui.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lzy:text_title="@string/login_forget_psw"
        lzy:img_left="@mipmap/ic_back"
        lzy:title_color="@color/transparent"
        ></com.wlm.wlm.ui.CustomTitleBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30"
        android:textColor="@color/login_title_text"
        android:textSize="@dimen/margin_25"
        android:text="用户名"/>


    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30"
        android:drawableLeft="@mipmap/ic_register_head"
        android:drawablePadding="@dimen/margin_15"
        android:background="@drawable/et_underline_selected"
        android:hint="请输入用户名"/>


        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/login_btn_click"
            android:textSize="@dimen/btn_register_text_size"
            android:text="下一步"/>
    </LinearLayout>

</LinearLayout>
