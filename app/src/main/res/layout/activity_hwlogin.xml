<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_login_bg"/>

    <LinearLayout
        android:id="@+id/ll_input_phone"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@drawable/shape_register_edit"
        android:layout_marginBottom="@dimen/margin_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_13"
            android:src="@mipmap/ic_register_account"/>

        <EditText
            android:id="@+id/et_input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin_10"
            android:textColorHint="@color/register_text_hint_bg"
            android:textColor="@color/groupon_text"
            android:hint="@string/login_input_phone"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_input_invitation"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/shape_register_edit"
        android:layout_marginBottom="@dimen/margin_10">

        <ImageView
            android:id="@+id/iv_input_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_13"
            android:src="@mipmap/ic_register_invitation"/>

        <EditText
            android:id="@+id/et_input_invitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/iv_input_invitation"
            android:textColor="@color/groupon_text"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:textColorHint="@color/register_text_hint_bg"
            android:hint="@string/login_input_psw"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_over"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:text="@string/login"
        android:textColor="@color/white"
        android:background="@drawable/shape_register_btn"
        android:textSize="@dimen/textsize16"
        android:layout_marginTop="@dimen/margin_20"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_login_shape"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/textsize12"
            android:text="已阅读并"
            android:textColor="@color/grey_color3"
            />

        <TextView
            android:id="@+id/tv_service_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意服务协议与隐私政策"
            android:textSize="@dimen/textsize12"
            android:textColor="@color/setting_title_color"/>



    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
