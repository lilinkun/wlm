<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lzy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wlm.wlm.slide.SlideDetailsLayout
        android:id="@+id/slidedetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wlm.wlm.ui.TranslucentScrollView
                android:id="@+id/tsv_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/menu_item_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <com.xw.banner.Banner
                            android:id="@+id/banner_good_pic"
                            android:layout_width="match_parent"
                            android:layout_height="380dp"
                            lzy:image_scale_type="fit_xy"/>

                        <LinearLayout
                            android:id="@+id/ll_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_20"
                            android:padding="@dimen/padding_10">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_goods_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_20"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/padding_10">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_shared" />
                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_rush"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@drawable/shape_groupon_goods_tetail"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/margin_20">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize17"
                                android:text="￥"/>


                            <TextView
                                android:id="@+id/tv_groupon_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize35"
                                android:text="60"/>


                            <com.wlm.wlm.ui.MyTextView
                                android:id="@+id/tv_groupon_old_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:includeFontPadding="false"
                                android:textColor="#f8f8f8"
                                android:textSize="@dimen/textsize14"
                                android:text="￥90"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/margin_10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="库存"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize14" />


                            <TextView
                                android:id="@+id/tv_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="438"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize20" />


                            <TextView
                                android:id="@+id/tv_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="盒"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize14" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/margin_15">

                        <TextView
                            android:id="@+id/tv_goods_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:maxLines="2"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/pop_text_bg"
                            android:text="养肤好水 安润奈肌断食水500ml 修护屏障 修护毛孔 发酵AHA原液"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_15"
                            android:background="@color/line_bg"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_grounon_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/list_divider"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:text="服务"
                                android:textSize="@dimen/textsize13" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_store_free_shipping"
                                android:layout_marginLeft="@dimen/margin_13"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_4"
                                android:textSize="@dimen/textsize10"
                                android:textColor="@color/store_text_bg"
                                android:text="全场包邮"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_store_quality_goods"
                                android:layout_marginLeft="@dimen/margin_13"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_4"
                                android:textSize="@dimen/textsize10"
                                android:textColor="@color/store_text_bg"
                                android:text="正品保障"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_13"
                                android:src="@mipmap/ic_shared_small"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_4"
                                android:textSize="@dimen/textsize10"
                                android:textColor="@color/store_text_bg"
                                android:text="全场包邮"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line_bg"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp">

                            <LinearLayout
                                android:id="@+id/ll_no_delivery"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="不配送区域"
                                    android:textColor="@color/list_divider"
                                    android:textSize="@dimen/textsize13"
                                    android:layout_marginLeft="@dimen/margin_10"/>

                                <TextView
                                    android:id="@+id/tv_no_delivery"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_13"
                                    android:text="台湾省、澳门特别行政区、香港特别行政区"
                                    android:textSize="@dimen/textsize13"
                                    android:textColor="@color/black_333333"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/margin_15"
                                android:src="@mipmap/ic_right_arrow"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:gravity="center"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_15"
                            android:text="商品详情" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_groupon_pic"/>

                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_goods_detail"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        />

                </LinearLayout>

            </com.wlm.wlm.ui.TranslucentScrollView>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar1"
                android:background="#0019be"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

            </android.support.v7.widget.Toolbar>


        </RelativeLayout>

        <WebView
            android:id="@+id/wv_goods_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></WebView>

    </com.wlm.wlm.slide.SlideDetailsLayout>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_shop"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip">

            <ImageView
                android:id="@+id/ic_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3.0dip"
                android:src="@mipmap/ic_uncollection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goods_uncollect"
                android:textColor="@color/grey_color3"
                android:textSize="@dimen/textsize13"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shop_car"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip">

            <ImageView
                android:id="@+id/ic_shop_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3.0dip"
                android:src="@mipmap/ic_shop_car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopping_car"
                android:textColor="@color/grey_color3"
                android:textSize="@dimen/textsize13" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_add_cart"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="3.0"
            android:background="@color/goods_add_cart">

            <TextView
                android:id="@+id/tx_go_TB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_ord_price"
                android:layout_centerInParent="true"
                android:text="@string/goods_add_shoppingcar"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize15" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_immediate_purchase"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="3.0"
            android:background="@color/groupon_text">

            <TextView
                android:id="@+id/tx_tikey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/goods_buy_now"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize15" />
        </RelativeLayout>
    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="@dimen/margin_13"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_goods_share"
        />


    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_"
        android:visibility="gone" />
</RelativeLayout>
