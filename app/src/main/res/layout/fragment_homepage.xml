<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.wlm.wlm.ui.CusPtrClassicFrameLayout
        android:id="@+id/mPtrframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptr_duration_to_close="3000"
        app:ptr_duration_to_close_header="2000"
        app:ptr_keep_header_when_refresh="true"
        app:ptr_pull_to_fresh="false"
        app:ptr_ratio_of_header_height_to_refresh="1.2"
        app:ptr_resistance="1.7">
    <com.wlm.wlm.ui.TranslucentScrollView
        android:id="@+id/tsv_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.xw.banner.Banner
                    android:id="@+id/bannerView"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    app:indicator_width="10dp"
                    app:indicator_height="10dp"
                    app:indicator_margin="5dp"
                    app:indicator_drawable_selected="@drawable/ic_home_circle_banner_click"
                    app:indicator_drawable_unselected="@drawable/ic_home_circle_banner_unclick"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"/>


                <ImageView
                    android:id="@+id/big_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"/>

                <LinearLayout
                    android:id="@+id/ll_vip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                </LinearLayout>
                
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize11"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:textColor="@color/point_text_color"
                        android:text="限时抢购"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize11"
                        android:layout_marginLeft="@dimen/margin_25"
                        android:textColor="@color/point_text_color"
                        android:text="距离结束"/>

                    <com.wlm.wlm.ui.CountdownView
                        android:id="@+id/tv_rush_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_25"
                        android:layout_marginRight="@dimen/margin_5"
                        app:isHideTimeBackground="false"
                        app:timeBgColor="@color/groupon_text"
                        app:timeBgSize="@dimen/textsize16"
                        app:timeBgRadius="2dp"
                        app:isShowDay="true"
                        app:isShowHour="true"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:timeTextColor="#ffffff"
                        app:timeTextSize="11sp"
                        app:isTimeTextBold="true"
                        app:suffixGravity="center"
                        app:suffixTextColor="@color/point_text_color"
                        app:suffixTextSize="11sp"
                        app:suffixDay="天"
                        app:suffixHour="时"
                        app:suffixMinute="分"
                        app:suffixSecond="秒"/>

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_home_commodities"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />


                <include
                    layout="@layout/layout_hot_commodities"/>


            </LinearLayout>
        </RelativeLayout>
    </com.wlm.wlm.ui.TranslucentScrollView>

    </com.wlm.wlm.ui.CusPtrClassicFrameLayout>

    <include
        android:id="@+id/title_layout_search"
        layout="@layout/title_layout_search" />
</RelativeLayout>