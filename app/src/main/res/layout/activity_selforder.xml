<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@mipmap/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableRight="@mipmap/ic_self_order_sanjiao"
            android:text="自营商城"/>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lin_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/tx_moren"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10.0dip"
                android:text="全部"
                android:textColor="@color/main_app_color"
                android:textSize="@dimen/textsize14" />

            <View
                android:id="@+id/view_4"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@+id/tx_moren"
                android:background="@color/main_app_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/tx_pople"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10.0dip"
                android:text="待付款"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize14" />

            <View
                android:id="@+id/view_1"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@+id/tx_pople"
                android:visibility="gone"
                android:background="@color/main_app_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/tx_top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10.0dip"
                android:text="待发货"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize14" />

            <View
                android:id="@+id/view_2"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@+id/tx_top"
                android:background="@color/main_app_color"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <RelativeLayout
                android:id="@+id/rel_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tx_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip"
                    android:text="待收货"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize14" />

            </RelativeLayout>

            <View
                android:id="@+id/view_3"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@+id/rel_price"
                android:background="@color/main_app_color"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_self_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
