<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_top"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tx_moren"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="@string/moren"
            android:textColor="@color/list_divider"
            android:textSize="@dimen/textsize13" />

        <View
            android:id="@+id/view_1"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@+id/tx_moren"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_host"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tx_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/clother_host"
            android:textColor="@color/list_divider"
            android:textSize="@dimen/textsize13"  />

        <ImageView
            android:id="@+id/iv_host_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tx_host"
            android:layout_marginLeft="@dimen/margin_4"
            android:visibility="gone"
            android:src="@mipmap/j_2"
            />

        <View
            android:id="@+id/view_2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@+id/tx_host"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tx_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:text="@string/clother_top"
                android:textColor="@color/list_divider"
                android:textSize="@dimen/textsize13"  />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@+id/tx_top"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="6.0dip"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/j_1" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="6.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:src="@mipmap/j_2" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view_3"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@+id/rel_top"
            android:background="@color/main_app_color"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_offer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tx_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:text="@string/clother_price"
                android:textColor="@color/list_divider"
                android:textSize="@dimen/textsize13"  />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@+id/tx_price"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="6.0dip"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/j_1" />

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="6.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:src="@mipmap/j_2" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view_4"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@+id/rel_good_offer"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>