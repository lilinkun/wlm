<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="#50000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ll_gridview_meua"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <GridView
        android:id="@+id/gridview_meua"
        android:background="@color/white"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="@null"
        android:numColumns="4" />
    <TextView
        android:textSize="@dimen/textsize15"
        android:textColor="@color/setting_title_color"
        android:gravity="center"
        android:id="@+id/tx_hidepopuwindow"
        android:background="@drawable/menu_type_layout_selector"
        android:padding="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:text="@string/hide_popuwindow" />
</LinearLayout>
