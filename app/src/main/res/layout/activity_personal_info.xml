<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lzy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wlm.wlm.ui.CustomTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lzy:img_left="@mipmap/ic_back"
        lzy:text_right="@string/personal_over"
        lzy:text_title="@string/setting_info"
        lzy:title_color="@color/white">
    </com.wlm.wlm.ui.CustomTitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_info_pop"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:paddingRight="@dimen/margin_15">

        <RelativeLayout
            android:id="@+id/rl_head_title_info"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/black_333333"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/personal_head_face" />


                <com.wlm.wlm.ui.RoundImageView
                    android:id="@+id/riv_info"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:src="@mipmap/ic_head"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/line_bg" />

        <RelativeLayout
            android:id="@+id/rl_nickname_info"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/black_333333"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/personal_nickname" />


                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize14"
                    android:textColor="@color/black_333333"
                    android:layout_marginRight="@dimen/margin_10"
                    />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/line_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/black_333333"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/personal_phone" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/textsize14"
                    android:layout_marginRight="@dimen/margin_10"
                    />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical"
        android:background="@drawable/shape_info_pop">

        <RelativeLayout
            android:id="@+id/rl_change_psd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/black_333333"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/pay_psd" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/margin_10">

            <TextView
                android:id="@+id/tv_pay_psd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/list_divider"
                android:textSize="@dimen/textsize14"
                android:text="修改"
                android:layout_marginRight="@dimen/margin_10"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_right_arrow"/>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/line_bg" />

        <RelativeLayout
            android:id="@+id/rl_clear"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/black_333333"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/setting_delete_cache" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/margin_10">

                <TextView
                    android:id="@+id/tv_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_right_arrow"
                    android:layout_marginLeft="@dimen/margin_10"/>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/shape_info_pop"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/black_333333"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="@string/about_app" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/margin_10">

            <TextView
                android:id="@+id/tv_new_edition"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/new_edition"
                android:text="有新版本"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize12"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_right_arrow"
                android:layout_marginLeft="@dimen/margin_10"/>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_loginout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/shape_info_pop"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/textsize16"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/setting_exit_login"/>

</LinearLayout>
