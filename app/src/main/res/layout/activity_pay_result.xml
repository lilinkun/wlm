<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lzy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wlm.wlm.ui.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lzy:text_title="支付结果"
        lzy:text_color="@color/white"
        lzy:img_left="@mipmap/ic_back_white"
        lzy:title_color="@color/setting_title_color"></com.wlm.wlm.ui.CustomTitleBar>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_order_over"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="94dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_14"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功"
            android:textColor="@color/setting_title_color"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:textSize="@dimen/textsize20"
            android:textColor="@color/login_title_text"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="85dp"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_back_home"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="返回首页"
            android:textColor="@color/white"
            android:background="@drawable/shape_register_btn"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:textSize="@dimen/textsize16"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_see_order"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="查看订单"
            android:gravity="center"
            android:textSize="@dimen/textsize15"
            android:textColor="@color/setting_title_color"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"/>


    </LinearLayout>
</LinearLayout>
