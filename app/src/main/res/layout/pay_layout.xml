<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:background="@drawable/shape_info_pop"
    android:layout_marginTop="@dimen/margin_10"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textsize14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="@string/goods_price"/>


        <TextView
            android:id="@+id/goods_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textsize14"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:text="¥0"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_need_integral"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/rl_need_integral"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textsize14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="@string/uses_integral"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_use_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/setting_title_color"
            android:textSize="@dimen/textsize14"
            android:layout_marginRight="@dimen/margin_10"
            android:text="0"/>

            <LinearLayout
                android:id="@+id/ll_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/textsize14"
                android:layout_centerVertical="true"
                android:text="@string/use_integral"/>


            <TextView
                android:id="@+id/tv_old_use_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/textsize14"
                android:layout_centerVertical="true"
                android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

