<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lzy="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.wlm.wlm.ui.CustomTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lzy:text_title="@string/recharge_account"
        lzy:title_color="@color/white"
        lzy:img_left="@mipmap/ic_back"
        ></com.wlm.wlm.ui.CustomTitleBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="horizontal">
        <com.wlm.wlm.ui.RoundImageView
            android:id="@+id/tv_head"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize18"
            android:layout_marginLeft="@dimen/margin_5"
            android:textColor="@color/login_title_text"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/margin_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/grey_color2"
                android:text="余额："/>

            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/grey_color2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/grey_color2"
                android:text="积分"/>


        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_100"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textsize18"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@drawable/text_shape_recharge"
            android:textColor="@drawable/text_recharge"
            android:text="10元"
            />

        <TextView
            android:id="@+id/text_200"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="20元"
            android:textSize="@dimen/textsize18"
            android:background="@drawable/text_shape_recharge"
            android:textColor="@drawable/text_recharge"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_15"/>


        <TextView
            android:id="@+id/text_500"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="100元"
            android:gravity="center"
            android:textSize="@dimen/textsize18"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/text_shape_recharge"
            android:textColor="@drawable/text_recharge"
            android:layout_marginLeft="@dimen/margin_15"/>


            </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_edit_amount"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center"
            android:background="@drawable/rechange_frame"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_marginLeft="@dimen/margin_15"
                />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:paddingTop="@dimen/margin_13"
                android:paddingBottom="@dimen/margin_13"
                android:inputType="number"
                android:hint="其他金额"
                android:textColor="@color/login_title_text"
                android:background="@null"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/margin_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值"
                    android:textSize="@dimen/margin_14"
                    android:textColor="@color/pop_text_bg"/>


                <TextView
                    android:id="@+id/tv_charge_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/margin_14"
                    android:textColor="@color/setting_title_color"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textSize="@dimen/margin_14"
                    android:textColor="@color/pop_text_bg"/>

            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recharge_commit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/tv_bg_click"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_15"
                android:text="立即充值"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:textSize="@dimen/textsize18" />
        </LinearLayout>

</LinearLayout>