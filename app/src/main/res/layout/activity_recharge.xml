<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lzy="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffeeeeee"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.wlm.wlm.ui.CustomTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lzy:text_title="@string/recharge_account"
        lzy:title_color="@color/white"
        lzy:img_left="@mipmap/ic_back"
        ></com.wlm.wlm.ui.CustomTitleBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/margin_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:textSize="@dimen/margin_24"
            android:textColor="@color/login_title_text"/>

        <TextView
            android:id="@+id/tv_integral_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textsize18"
            android:layout_alignBottom="@+id/tv_account"
            android:textColor="@color/login_title_text"/>

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recharge_sum"
                android:textSize="@dimen/margin_24"
                android:textColor="@color/login_title_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_100"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/textsize18"
                    android:paddingTop="@dimen/margin_13"
                    android:paddingBottom="@dimen/margin_13"
                    android:background="@drawable/text_shape_recharge"
                    android:textColor="@drawable/text_recharge"
                    android:text="100元"
                    />

                <TextView
                    android:id="@+id/text_200"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200元"
                    android:textSize="@dimen/textsize18"
                    android:paddingTop="@dimen/margin_13"
                    android:paddingBottom="@dimen/margin_13"
                    android:background="@drawable/text_shape_recharge"
                    android:textColor="@drawable/text_recharge"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"/>


                <TextView
                    android:id="@+id/text_500"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="500元"
                    android:gravity="center"
                    android:textSize="@dimen/textsize18"
                    android:background="@drawable/text_shape_recharge"
                    android:textColor="@drawable/text_recharge"
                    android:paddingTop="@dimen/margin_13"
                    android:paddingBottom="@dimen/margin_13"
                    android:layout_marginLeft="@dimen/margin_15"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_1000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/textsize18"
                    android:paddingTop="@dimen/margin_13"
                    android:paddingBottom="@dimen/margin_13"
                    android:background="@drawable/text_shape_recharge"
                    android:textColor="@drawable/text_recharge"
                    android:text="1000元"
                    />

                <TextView
                    android:id="@+id/text_2000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2000元"
                    android:textSize="@dimen/textsize18"
                    android:paddingTop="@dimen/margin_13"
                    android:paddingBottom="@dimen/margin_13"
                    android:background="@drawable/text_shape_recharge"
                    android:textColor="@drawable/text_recharge"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"/>


                <TextView
                    android:id="@+id/text_5000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5000元"
                    android:gravity="center"
                    android:textSize="@dimen/textsize18"
                    android:background="@drawable/text_shape_recharge"
                    android:textColor="@drawable/text_recharge"
                    android:paddingTop="@dimen/margin_13"
                    android:paddingBottom="@dimen/margin_13"
                    android:layout_marginLeft="@dimen/margin_15"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:gravity="center"
            android:background="@drawable/rechange_frame"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_marginLeft="@dimen/margin_15"
                />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:paddingTop="@dimen/margin_13"
                android:paddingBottom="@dimen/margin_13"
                android:inputType="number"
                android:hint="其他金额"
                android:textColor="@color/login_title_text"
                android:background="@null"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_35"
            android:text="充值方式"
            android:textSize="@dimen/margin_24"
            android:textColor="@color/pop_text_bg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_order_wx"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:text="@string/pay_wx"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/checkbox_bg"
                android:button="@null"
                android:layout_marginRight="@dimen/margin_15"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recharge_commit"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginTop="50.0dip"
                android:background="@drawable/text_selector_commit"
                android:gravity="center"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize18" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>