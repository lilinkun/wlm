<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/layout_visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/integral_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <LinearLayout
                    android:id="@+id/ll_search"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:gravity="center_vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/shape_store_search"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:src="@mipmap/ic_search_icon"/>

                    <TextView
                        android:id="@+id/tv_store_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:textSize="@dimen/textsize15"
                        android:imeOptions="actionDone"
                        />

                </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/shape_integral_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:textSize="@dimen/textsize18"
            android:layout_marginLeft="@dimen/margin_10"
            android:textColor="@color/integral_bg"
            android:text="@string/integral_slogan"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_integral_free_shipping"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_4"
                android:textSize="@dimen/textsize10"
                android:textColor="@color/integral_text_bg"
                android:text="全场包邮"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_integral_quality_goods"
                android:layout_marginLeft="31dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_4"
                android:textSize="@dimen/textsize10"
                android:textColor="@color/integral_text_bg"
                android:text="正品保障"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_integral_pay"
                android:layout_marginLeft="31dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_4"
                android:textSize="@dimen/textsize10"
                android:textColor="@color/integral_text_bg"
                android:visibility="gone"
                android:text="买贵包赔"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_integral_no_reason"
                android:layout_marginLeft="31dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_4"
                android:textSize="@dimen/textsize10"
                android:textColor="@color/integral_text_bg"
                android:text="七天无理由"/>


        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="9dp"
        android:background="#c3b3db"/>


    </LinearLayout>
    </LinearLayout>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/bg_list"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.wlm.wlm.ui.TopLinearlayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textcolor="@color/setting_title_color"
            app:textnormalcolor="@color/list_divider"
            app:up_arrow="@mipmap/ic_store_dot_up"
            app:down_arrow="@mipmap/ic_store_dot_down"
            />

        <com.wlm.wlm.ui.CustomSortLayout
            android:id="@+id/custom_sort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_list"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

        </com.wlm.wlm.ui.CustomSortLayout>

        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>


