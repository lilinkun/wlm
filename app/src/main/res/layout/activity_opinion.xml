<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lzy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_bg"
    android:orientation="vertical">

    <com.wlm.wlm.ui.CustomTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lzy:text_title="@string/me_opinion"
        lzy:title_color="@color/white"
        lzy:img_left="@mipmap/ic_back"
        ></com.wlm.wlm.ui.CustomTitleBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/shape_info_pop">

    <RelativeLayout
        android:id="@+id/rl_error_type"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:textColor="@color/login_title_text"
            android:text="反馈类型"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_choose_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_title_text"
                android:text="未选择"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:src="@mipmap/ic_right_arrow"/>

        </LinearLayout>

    </RelativeLayout>

    <EditText
        android:id="@+id/et_opinion"
        android:layout_width="match_parent"
        android:layout_height="200.0dip"
        android:gravity="top"
        android:hint="@string/opinion_input_detailed"
        android:textColorHint="@color/login_title_text"
        android:textSize="@dimen/textsize16"
        android:textColor="@color/login_title_text"
        android:maxLength="150"
        android:background="@color/white"
        android:paddingLeft="10.0dip"
        android:paddingTop="10.0dip"
        android:layout_marginBottom="@dimen/margin_10"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_commit"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="60.0dip"
        android:background="@drawable/text_selector_commit"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="18.0sp" />

</LinearLayout>
