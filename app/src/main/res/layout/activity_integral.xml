<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ic_balance_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/ic_wlm_coin_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="26dp">
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_20">
        <ImageView
            android:id="@+id/iv_head_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_back"/>
    </LinearLayout>

        <TextView
            android:id="@+id/tv_balance_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textsize18"/>


    </RelativeLayout>


    <com.wlm.wlm.ui.PriceTextView
        android:id="@+id/tv_balance_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:textColor="@color/black_333333"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="@dimen/textsize12"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/shape_register_btn"
        android:text="提现"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/margin_25"
        android:paddingRight="@dimen/margin_25"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <RelativeLayout
                android:id="@+id/rl_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_25"
                android:paddingTop="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333333"
                    android:layout_centerHorizontal="true"
                    android:text="明细"/>


                <View
                    android:id="@+id/line_list"
                    android:layout_width="35dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_list"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_centerHorizontal="true"
                    android:background="@color/setting_title_color"/>


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_wait_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_25"
                android:paddingTop="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wait_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_color2"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/textsize14"
                    android:text="待结算"/>


                <View
                    android:id="@+id/line_wait_receiver"
                    android:layout_width="35dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_wait_receiver"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:background="@color/setting_title_color"/>


            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_left"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/comm_bg"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
