<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ic_balance_status"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:background="@mipmap/ic_wlm_coin_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="26dp">
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_20">
        <ImageView
            android:id="@+id/iv_head_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_back"/>
    </LinearLayout>

        <TextView
            android:id="@+id/tv_balance_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textsize18"/>


    </RelativeLayout>


    <com.wlm.wlm.ui.PriceTextView
        android:id="@+id/tv_balance_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textSize="24sp"
        android:textColor="@color/black_333333"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize12"
        android:layout_marginTop="@dimen/margin_5"
        android:text="@string/me_wlm_coin"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/login_title_text"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_income_pay"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="@dimen/margin_10">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textsize14"/>

        <TextView
            android:id="@+id/tv_pay_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_balance"
            android:textSize="@dimen/textsize20"
            android:textColor="@color/setting_title_color"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_register_btn"
            android:text="提现"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_25"
            android:paddingRight="@dimen/margin_25"/>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_left"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/comm_bg"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
